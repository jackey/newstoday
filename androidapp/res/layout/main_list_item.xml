<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mian_list_item_parent_linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal" >

    <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="59dp"
                    android:id="@+id/main_list_item_image"
                    android:contentDescription="@string/main_list_item_image_description"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/newslogo" />

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="75dp"
                    android:orientation="vertical" >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="What happend today ? I am title of news"
                        android:textSize="12sp"
                        android:id="@+id/main_list_item_title" />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:textSize="12sp"
                          android:text="I am news teaser, today happend is something"
                          android:id="@+id/main_list_item_teaser"
                        ></TextView>
            </LinearLayout>
            </RelativeLayout>

</LinearLayout>

